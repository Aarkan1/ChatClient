<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="528.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.chatUIcontroller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label alignment="TOP_LEFT" text="ChatApp" BorderPane.alignment="TOP_LEFT">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="5.0" />
            </BorderPane.margin>
        </Label>
    </top>
   <center>
      <VBox prefHeight="523.0" prefWidth="143.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
              <TextArea fx:id="printMessages" editable="false" focusTraversable="false" prefHeight="518.0" prefWidth="354.0" wrapText="true">
                  <font>
                      <Font name="Arial" size="12.0" />
                  </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
              </TextArea>
              <HBox prefHeight="8.0" prefWidth="200.0">
                  <children>
                      <TextField fx:id="newMessage" onKeyReleased="#sendMessageEnter" prefHeight="25.0" prefWidth="800.0" promptText="Type message">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></TextField>
                      <Button fx:id="sendMessage" maxHeight="25.0" maxWidth="65.0" minHeight="25.0" minWidth="65.0" mnemonicParsing="false" onAction="#sendMessageButton" prefHeight="25.0" prefWidth="65.0" text="Send" />
                  </children>
              </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" />
         </BorderPane.margin>
         <children>
            <TextField fx:id="username" promptText="Username">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <VBox fx:id="users" prefHeight="568.0" prefWidth="100.0" spacing="5" />
         </children>
      </VBox>
   </right>
</BorderPane>
