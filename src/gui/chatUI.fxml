<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: darkslategray" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.chatUIcontroller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <Label alignment="TOP_LEFT" style="-fx-text-fill: white" text="ChatApp" BorderPane.alignment="TOP_LEFT">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="5.0" />
            </BorderPane.margin>
        </Label>
    </top>
   <center>
      <VBox prefHeight="550.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <ScrollPane fx:id="scrollMessages" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <content>
                  <VBox fx:id="printMessages" prefHeight="500.0" />
               </content></ScrollPane>
              <HBox minHeight="25.0" prefWidth="400.0">
                  <children>
                      <TextField fx:id="userInputNewMessage" minHeight="25.0" onKeyReleased="#sendMessageEnter" prefWidth="400.0" promptText="Type message" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></TextField>
                      <Button fx:id="sendMessage" maxHeight="25.0" maxWidth="65.0" minHeight="25.0" minWidth="65.0" mnemonicParsing="false" onAction="#sendMessageButton" text="Send">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Button>
                  </children>
              </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox fillWidth="false" prefHeight="550.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="450.0" minWidth="150.0" VBox.vgrow="ALWAYS">
               <content>
      
                   <VBox fx:id="users" fillWidth="false" prefHeight="500.0" prefWidth="140.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin></VBox>
               </content>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </ScrollPane>
            <TextField fx:id="newUsername" minHeight="25.0" minWidth="125.0" onKeyReleased="#sendNewUsernameEnter" promptText="New Username">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <Button id="changeUser_btn" minHeight="25.0" minWidth="150.0" mnemonicParsing="false" onAction="#sendNewUsernameButton" text="Change Username">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
